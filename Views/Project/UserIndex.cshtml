@model List<BugTracker.Models.ProjectClasses.Project>
@{
    ViewBag.Title = "UserIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Projects</h2>
@if (Model.Count > 0)
{
    <div>
        <br />
        @foreach (var project in Model)
        {
            <div>
                <div>Name : @project.Name</div>
                <div>Priority : @project.Priority </div>
            </div>
            <br />
            <div>
                <div class="btn btn-info btn-xs">
                    @Html.ActionLink("Create Ticket", "CreateTicket", new { projectId = project.Id }, null)
                </div>

            </div>

            <br /><br />
        }
    </div>

}


@model List<BugTracker.Models.ProjectClasses.Project>
@{
    ViewBag.Title = "UserIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.IsInRole("Admin"))
{
    <h2 class="centerTextAdmin">Projects Overview</h2>
}
else
{
    <h2 class="centerTextManager">Projects Overview</h2>
}

<br />

@if (Model.Count > 0)
{
    <div class="projectContainer">
        <br />
        @foreach (var project in Model)
        {
            <div class="projectInfo">
                <div>
                    <h4><label>Name :</label>  @project.Name</h4>
                    <h4><label>Priority :</label>  @project.Priority </h4>
                </div>
                <br />

                <div>
                    <div class="btn btn-default btn-xs">
                        @Html.ActionLink("Assign Users", "AssignUsersToProject", new { projectId = project.Id }, null)
                    </div>
                    <div class="btn btn-default btn-xs">
                        @Html.ActionLink("UnAssign Users", "UnAssignUserfromProject", new { projectId = project.Id }, null)
                    </div>
                    <div class="btn btn-default btn-xs">@Html.ActionLink("Edit", "EditProject", new { projectId = project.Id }, null)</div>
                    <div class="btn btn-default btn-xs">@Html.ActionLink("Delete", "DeleteProject", new { projectId = project.Id }, null)</div>
                </div>

                <br />
            </div>
        }
    </div>

}

<br />
<br />

<div>
    <span class="btn btn-default btnShadow">@Html.ActionLink("Back To Project", "Index", "Project")</span>
    @if (User.IsInRole("Admin"))
    {
        <span class="btn btn-default btnShadow">@Html.ActionLink("Back To DashBoard", "Index", "Admin")</span>
    }
    else
    {
        <span class="btn btn-default btnShadow">@Html.ActionLink("Back To DashBoard", "Index", "Manager")</span>
    }
</div>

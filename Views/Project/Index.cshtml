@using Microsoft.AspNet.Identity

@model List<BugTracker.Models.ProjectClasses.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.IsInRole("Admin"))
    {
        <h2 class="centerTextAdmin">Projects</h2>
    }
else
    {
        <h2 class="centerTextManager">Projects</h2>
    }

<br />
<br />

<div>
    <div class="btn btn-info btn-lg btnBorder">
        @Html.ActionLink("Add Project", "AddProject", "Project")
    </div>
    <div class="btn btn-info btn-lg btnBorder">
        @Html.ActionLink("Show All Projects", "UserIndex", "Project")
    </div>
</div>


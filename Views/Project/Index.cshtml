@model List<BugTracker.Models.ProjectClasses.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Projects</h2>
@if (Model.Count > 0)
{
    <div>
        <br />
        @foreach (var project in Model)
        {
            <div>
                <div>Name : @project.Name</div>
                <div>Priority : @project.Priority </div>
            </div>
            <br />
            <div>
                <div class="btn btn-info btn-xs">
                    @Html.ActionLink("Assign Users", "AssignUsersToProject", new { projectId = project.Id }, null)
                </div>
                <div class="btn btn-info btn-xs">
                    @Html.ActionLink("UnAssign Users", "UnAssignUserfromProject", new { projectId = project.Id }, null)
                </div>
                <div class="btn btn-info btn-xs">@Html.ActionLink("Edit", "EditProject", new { projectId = project.Id }, null)</div>
                <div class="btn btn-info btn-xs">@Html.ActionLink("Delete", "DeleteProject", new { projectId = project.Id }, null)</div>
            </div>

            <br /><br />
        }
    </div>

}


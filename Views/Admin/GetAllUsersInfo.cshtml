@model List<BugTracker.Models.ProjectClasses.UserInfoHolder>
@{
    ViewBag.Title = "GetAllUsersInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="centerTextAdmin">Get All Users Info</h2>

<br />
<br />


<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Role")
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @foreach (var role in item.RolesInfo)
            {
                <td>
                    @Html.DisplayFor(modelItem => role.Name)
                </td>
                <td>
                    @Html.ActionLink("Remove Role", "RemoveUserFromRole", "Admin", new { userId = item.Id, role = role.Name }, null)
                </td>
            }
            <td>
                @Html.ActionLink("Delete User", "DeleteUser", "Admin", new { userId = item.Id }, null)
            </td>
        </tr>
    }

</table>

<br />
<br />

<div>
    <span class="btn btn-default btnShadow">@Html.ActionLink("Go back", "Index", "Admin")</span>
</div>


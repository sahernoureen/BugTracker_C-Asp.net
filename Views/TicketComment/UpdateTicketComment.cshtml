@model BugTracker.Models.ProjectClasses.TicketComment
@{
    ViewBag.Title = "Update Ticket Comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@using (Html.BeginForm("UpdateTicketComment", "TicketComment", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h2>Update Comment</h2>

    <br />
    <br />
    @Html.HiddenFor(m => m.Id)
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Comment, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Comment, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TicketId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TicketId, new { @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Update" />
        </div>
    </div>
}

@model List<BugTracker.Models.ProjectClasses.Ticket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="centerTextDev">Developer's Dashboard</h2>

<br />
<button class="btn btn-warning btn-default col-md-offset-10">
    @ViewBag.NotificationCount
    @Html.ActionLink("New Notifications", "DeveloperNotifications", "Developer")
</button>

<br />
<br />
<br />

@if (Model.Count > 0)
{
    <div class="projectContainer">
        <br />
        @foreach (var ticket in Model)
        {
            <div class="projectInfo">
                <div>
                    <h4><label>Title :</label>  @ticket.Title</h4>
                    <h4><label>Description :</label>  @ticket.Description </h4>
                </div>
                <br />

            </div>
        }
    </div>

}

<br />

<div>
    <div class="btn btn-warning btn-lg">@Html.ActionLink("Go to Tickets", "Index", "Ticket")</div>
</div>

<br />

